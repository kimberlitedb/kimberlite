{
  "name": "@kimberlite/client",
  "version": "0.4.0",
  "description": "TypeScript client for Kimberlite database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build:native": "./scripts/build-native.sh",
    "build": "npm run build:native && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "database",
    "compliance",
    "audit",
    "healthcare",
    "event-sourcing"
  ],
  "author": "Kimberlite Team <team@kimberlite.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimberlitedb/kimberlite.git",
    "directory": "sdks/typescript"
  },
  "bugs": {
    "url": "https://github.com/kimberlitedb/kimberlite/issues"
  },
  "homepage": "https://github.com/kimberlitedb/kimberlite#readme",
  "dependencies": {
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3",
    "ref-struct-napi": "^1.1.1",
    "ref-array-napi": "^1.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
